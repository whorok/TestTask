@{
	ViewData["Title"] = "Organizations list";
}

@model List<TestTask.Models.Entities.Organization>

<h1>Organizations</h1>

<a href="@Url.Action("Add", "Organizations")" class="btn btn-success mb-3">Add New Organization</a>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>INN</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var organization in Model)
		{
			<tr>
				<td>@organization.Name</td>
				<td>@organization.INN</td>
				<td>@organization.Email</td>
				<td>@organization.Phone</td>
				<th>
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@organization.Id">Edit</a>
					<form method="post" asp-action="Delete" asp-route-id="@organization.Id" style="display:inline;">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</th>
			</tr>
		}
	</tbody>
</table>
